{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../.",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "spec.ts$",
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/node_modules/**"
  ],
  "moduleDirectories": ["<rootDir>/", "node_modules"]
}
